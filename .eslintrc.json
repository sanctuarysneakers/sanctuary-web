{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
     "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    // Indent with 2 spaces
    "indent": ["error", 2],
    // Indent JSX with 2 spaces
    "react/jsx-indent": ["error", 2],
    // Indent props with 2 spaces
    "react/jsx-indent-props": ["error", 2]
  }
}